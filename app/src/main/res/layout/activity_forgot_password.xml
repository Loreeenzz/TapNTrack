<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".activity.forgotpassword.ForgotPassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- App Logo/Title Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="20dp">

            <!-- App Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#6200EA"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginBottom="8dp" />

            <!-- Subtitle -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/forgot_password_title"
                android:textColor="#757575"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Form Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forgot_password_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginBottom="16dp" />

        <!-- Instructions -->
        <TextView
            android:id="@+id/instructionsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/forgot_password_instructions"
            android:textColor="#757575"
            android:textSize="14sp" />

        <!-- Email Label -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/forgot_password_email_label"
                android:textColor="#757575"
                android:textSize="12sp"
                android:textStyle="bold" />

            <!-- Email EditText -->
            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:autofillHints="emailAddress"
                android:background="@drawable/edit_text_background"
                android:fontFamily="@font/poppins_regular"
                android:hint="@string/forgot_password_email_hint"
                android:inputType="textEmailAddress"
                android:padding="14dp"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:textColorHint="#546E7A"
                android:textSize="14sp"
                tools:ignore="DuplicateSpeakableTextCheck,VisualLintTextFieldSize" />
        </LinearLayout>

        <!-- Reset Password Button -->
        <Button
            android:id="@+id/resetPasswordButton"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="@string/forgot_password_button"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="#6200EA"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginBottom="20dp"
            android:elevation="4dp"
            android:stateListAnimator="@null"
            android:clickable="true"
            android:focusable="true"
            tools:ignore="VisualLintButtonSize" />

        <!-- Back to Login Link -->
        <TextView
            android:id="@+id/backToLoginTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/poppins_medium"
            android:minHeight="48dp"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:paddingEnd="8dp"
            android:paddingBottom="4dp"
            android:text="@string/forgot_password_back_link"
            android:textColor="#6200EA"
            android:textSize="13sp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>