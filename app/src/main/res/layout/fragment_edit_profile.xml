<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/white"
    tools:context=".fragment.EditProfileFragment">

    <!-- Header -->
    <TextView
        android:id="@+id/editProfileTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edit_profile_title"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="30dp" />

    <!-- Email Display (Read-only) -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edit_profile_email_label"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="5dp" />

    <TextView
        android:id="@+id/userEmailTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings_loading"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:background="@drawable/edit_text_background"
        android:padding="15dp"
        android:layout_marginBottom="20dp" />

    <!-- Name EditText -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edit_profile_name_label"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="5dp" />

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edit_profile_name_hint"
        android:inputType="text"
        android:autofillHints="name"
        android:textSize="16sp"
        android:background="@drawable/edit_text_background"
        android:padding="15dp"
        android:layout_marginBottom="30dp"
        tools:ignore="VisualLintTextFieldSize" />

    <!-- Update Button -->
    <Button
        android:id="@+id/updateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edit_profile_update_button"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/edit_text_background"
        android:layout_marginBottom="12dp"
        android:padding="15dp"
        tools:ignore="VisualLintButtonSize" />

    <!-- Cancel Button -->
    <Button
        android:id="@+id/cancelButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_background"
        android:padding="15dp"
        android:text="@string/edit_profile_cancel_button"
        android:textColor="#B0BEC5"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:ignore="VisualLintButtonSize" />

</LinearLayout>
